<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>


    <style name="btn" parent="android:Widget.Holo.Light.Button">
        <item name="android:minHeight">1dp</item>
        <item name="android:minWidth">1dp</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="android:colorBackground">@color/white_text</item>
    </style>

    <style name="button" parent="@style/btn">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:padding">@dimen/pad_10dp</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="android:textSize">@dimen/txt_15sp</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="simpleTextLabel">
        <item name="android:layout_margin">@dimen/pad_10dp</item>
        <item name="android:textAppearance">?attr/textAppearanceListItem</item>
    </style>

    <style name="simpleTextValue">
        <item name="android:layout_margin">@dimen/pad_10dp</item>
        <item name="android:textAppearance">?attr/textAppearanceListItem</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>
